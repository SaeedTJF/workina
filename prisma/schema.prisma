generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  username     String?       @unique
  name         String?
  passwordHash String
  isAdmin      Boolean       @default(false)
  mayEditTimes Boolean       @default(false)
  createdAt    DateTime      @default(now())
  workPeriods  WorkPeriod[]
  tasks        Task[]
  userProjects UserProject[]
}

model WorkPeriod {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  startedAt  DateTime
  stoppedAt  DateTime?
  createdAt  DateTime @default(now())
  project    Project? @relation(fields: [projectId], references: [id])
  projectId  Int?
}

model Task {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String?
  occurredAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   Int?
}

model Project {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  color        String?
  createdAt    DateTime       @default(now())
  tasks        Task[]
  userProjects UserProject[]
  workPeriods  WorkPeriod[]
}

model UserProject {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  createdAt DateTime @default(now())

  @@unique([userId, projectId])
}


